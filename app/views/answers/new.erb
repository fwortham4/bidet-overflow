<h1>Add Answer:</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form method="POST" action="/questions/<%= @question.id %>/answers">
  <textarea rows="4" cols="50" name='content' placeholder='Content'></textarea><br>

  <input type="submit" value="Add New Answer!">
</form>